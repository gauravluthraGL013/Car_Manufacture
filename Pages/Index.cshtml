<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Car Detail</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    @*<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">*@
    <link href="~/css/W3School.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/js/script.js"></script>
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body style="background-image: url('../wwwroot/images/1.jpeg');">
    <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2><b>Cars Detail</b></h2>
                    </div>
                    <div class="col-sm-6" style="padding-left:250px;">
                        @*adding button*@
                        <a href="#addCarModal" class="w3-button w3-white w3-hover-blue w3-round-xlarge text-dark" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add Car Here</span></a>
                    </div>
                </div>
            </div>
            @*creatring table to display the information*@
            <table class="table table-striped table-hover w3-border-dark-grey">
                <thead>


                    <tr>
                        <th>Name</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Colour</th>
                        <th colspan="6">Actions</th>
                    </tr>
                </thead>
                <tbody id="allCar">
                    <tr>
                        <!-- Tables appear Here-->

                    </tr>

                </tbody>
            </table>

        </div>
    </div>
    <!-- Adding Modal by using HTML -->

    <div id="addCarModal" class="modal w3-animate-zoom">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="javascript:void(0);" method="POST" onsubmit="addItem()">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Car Here</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Name</label>
                            <input id="add-name" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Model</label>
                           
                            <input id="add-model" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Year</label>
                            <input id="add-year" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Colour</label>
                            <input id="add-color" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default w3-round-xlarge text-dark" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-primary w3-round-xlarge text-dark" value="Add">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Editing Modal by using HTML -->
    <div id="editCarModal" class="modal w3-card-4 w3-animate-zoom">
        <div class="modal-dialog">
            <div class="modal-content">
                <form class="my-form">
                    <div class="modal-header">
                        <h4 class="modal-title">Edit Car Detail Here</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input id="edit-id" type="hidden" val="" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Name</label>
                            <input id="edit-name" type="text" class="form-control" val="" required>
                        </div>
                        <div class="form-group">
                            <label>Model</label>
                            <input id="edit-model" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Year</label>
                            <input id="edit-year" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label>Colour</label>
                            <input id="edit-color" type="text" class="form-control" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-outline-dark w3-round-xlarge text-dark" data-dismiss="modal" value="Cancel">
                        <input onclick="saveItem();" type="submit" class="btn btn-info w3-round-xlarge text-dark" value="Save">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Delete Modal by using HTML -->
    <div id="deleteCarModal" class="modal w3-animate-zoom">
        <div class="modal-dialog">
            <div class="modal-content">
                <form style="font-size:larger;">
                    <div class="modal-header">
                        <h4 class="modal-title">Delete Car Detail </h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input id="delete-id" type="hidden" class="form-control" value="">
                        </div>
                        <p>Do you want to delete this Information ?</p>

                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default w3-round-xlarge text-dark" data-dismiss="modal" value="Cancel">
                        <input onclick="deleteItem($('#delete-id').val())" id="delete-item" type="submit" class="btn btn-danger w3-round-xlarge text-dark " value="Delete">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        //run the function to loaded
        $(document).ready(function () {

            LoadTable();
        });
    </script>
    <div class="container">
        <main role="main" class="pb-3">
           
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="">
            Developer Gourav Luthra
            </div>
    </footer>
</body>
</html>

